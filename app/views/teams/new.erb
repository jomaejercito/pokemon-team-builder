<h2>Create a Pokémon Team</h2>

<form action="/teams" method="POST">
  <label>Team Name:</label>
  <br>
  <input type="text" name="team_name">
  <br><br><br>

  <label>Pokémon:</label>
  <br>
  <input type="text" name="pokemon_1" required>
  <input type="text" name="pokemon_2" required>
  <input type="text" name="pokemon_3">
  <input type="text" name="pokemon_4">
  <input type="text" name="pokemon_5">
  <input type="text" name="pokemon_6">

  <br><br><br><br><br>

  <input type="submit" value="submit">
</form>
